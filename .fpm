-s dir
--name mudclub
--category webserver
--description "MudClub: Ruby on Rails service to manage a team sports club (seasons, teams players, coaches, etc.)"
--license GPL3
--maintainer "Iván González Angullo (iangullo@gmail.com)"
--url "https://github.com/iangullo/mudclub/wiki"
--version 0.6.1
--architecture all
--depends bash
--depends git
--depends ruby
--depends ruby-rubygems
--depends postgresql
--depends nodejs
--depends nginx
--recommends mudclub-service
--after-install scripts/mudclub-build.sh
--after-upgrade scripts/mudclub-update.sh
--before-remove scripts/mudclub-remove.sh
scripts/mudclub-start.sh=/usr/local/bin/mudclub-start
scripts/mudclub-stop.sh=/usr/local/bin/mudclub-stop
scripts/mudclub-update.sh=/usr/local/bin/mudclub-update
config/nginx-mudclub=/etc/nginx/sites-available/mudclub
# config/mudclub-service=/usr/lib/systemd/system/mudclub.service